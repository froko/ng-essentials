{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src/",
    "lib": ["es2017", "dom"],
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "strict": true,
    "strictFunctionTypes": false,
    "strictNullChecks": false,
    "noEmitOnError": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "types": ["jest", "node"],
    // @lint rules
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/essentials/**/*", "src/**/jest/**/*", "src/**/cypress/**/*"]
}

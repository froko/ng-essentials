{
  "$schema": "http://json-schema.org/schema",
  "id": "SchematicsNgEssentials",
  "title": "Ng Essentials Options",
  "type": "object",
  "properties": {
    "jest": {
      "type": "boolean",
      "description": "Include jest",
      "default": false
    },
    "cypress": {
      "type": "boolean",
      "description": "Include cypress",
      "default": false
    },
    "husky": {
      "type": "boolean",
      "description": "Include husky",
      "default": false
    },
    "firstRun": {
      "type": "boolean",
      "description": "Indicates the first run of this schematic",
      "default": true,
      "readOnly": true
    }
  }
}

{
  "$schema": "../node_modules/@angular-devkit/schematics/collection-schema.json",
  "extends": ["@schematics/angular"],
  "schematics": {
    "ng-add": {
      "factory": "./ng-essentials/index#essentials",
      "schema": "./ng-essentials/schema.json",
      "description": "Adds better defaults to an existing Angular application."
    },
    "library": {
      "aliases": ["lib"],
      "factory": "./library/index#essentialsLibrary",
      "schema": "./library/schema.json",
      "description": "Generate a library project for Angular."
    },
    "application": {
      "aliases": ["app"],
      "factory": "./application/index#essentialsApplication",
      "schema": "./application/schema.json",
      "description": "Create an Angular application."
    }
  }
}
